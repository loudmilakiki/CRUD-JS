<main class='main'>
  <div class='main__content'>
    <header class='header'>
      <a href='/'>
        <img src='/svg/cross_back.png' />
      </a>
    </header>
    <h1 class='title title--center'>Назвіть плейліст</h1>

    <form
      method='POST'
      action='/spotify-create?{{#if data.isMix}}?isMix=true{{/if}}'
      class='form'
    >
      <input requared
        type='text'
        class='form__field'
        placeholder='Назва' name="name"
      />

      <button class='form__button'>Створити</button>
    </form>
  </div>
</main>