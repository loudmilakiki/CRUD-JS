
<main class='main'>
 
  <div class='main__content'>
    <h1 class="title title--center">{{name}}</h1>

    <ul class='track-list'>
  
      <li class='track'>
        <img
          src='/img/image 627.png'
          alt='{{name}}'>
          <div class="track__content">
            <strong class="track__name">{{name}}</strong>
            <em class="track__author">{{author}}</em>
          </div>
          <a href='/spotify-playlist-add?playlistId={{../playlistId}}&trackId={{id}}'>
              <img src='svg/add-button.png'>
          </a>
      </li>

    </ul>

  </div>

</main>